<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.binzeefox.passwordcollector.fragment.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text="用户名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username_userfragment"
            android:textSize="30sp" tools:layout_constraintTop_creator="1" android:layout_marginStart="14dp"
            android:layout_marginTop="32dp" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.25"/>

    <ListView
            android:id="@+id/lv_action"
            android:layout_width="383dp"
            android:layout_height="444dp"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/tv_username_userfragment"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_username_userfragment"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tap"
            app:layout_constraintBottom_toTopOf="@+id/lv_action" android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
