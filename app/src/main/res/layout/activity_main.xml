<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.binzeefox.passwordcollector.MainActivity" tools:ignore="MissingConstraints">

    <TextView
            android:text="用户名："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintBaseline_toBaselineOf="@+id/ed_user"
            app:layout_constraintRight_toLeftOf="@+id/ed_user"/>
    <TextView
            android:text="密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintBaseline_toBaselineOf="@+id/ed_userpassword"
            app:layout_constraintLeft_toLeftOf="@+id/textView"/>
    <EditText
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/ed_user"
            android:hint="请输入用户名"
            android:layout_marginEnd="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.69"/>
    <EditText
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_userpassword"
            android:hint="请输入密码" android:singleLine="true"
            app:layout_constraintLeft_toLeftOf="@+id/ed_user" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_user"/>

    <TextView
            android:text="密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_passconfirm"
            app:layout_constraintBaseline_toBaselineOf="@+id/ed_passConfirm"
            app:layout_constraintRight_toRightOf="@+id/textView2"/>
    <EditText
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_passConfirm"
            android:hint="请再次输入密码"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_userpassword"
            app:layout_constraintRight_toRightOf="@+id/ed_userpassword"/>
    <Button
            android:text="退出"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_onbotton"
            app:layout_constraintRight_toRightOf="@+id/bt_oncenter"
            app:layout_constraintTop_toBottomOf="@+id/bt_oncenter" android:layout_marginTop="12dp"/>
    <Button
            android:text="注册"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_oncenter"
            app:layout_constraintRight_toRightOf="@+id/bt_ontop"
            app:layout_constraintTop_toBottomOf="@+id/bt_ontop" android:layout_marginTop="12dp"/>
    <Button
            android:text="登陆"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_ontop"
            android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" android:layout_marginTop="296dp"
    />
    <TextView
            android:text="用户登录"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" android:layout_marginTop="16dp"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="384dp"
            android:layout_height="72dp"
            android:background="#1000"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="382dp"
            android:layout_height="18dp"
            android:showDividers="middle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:id="@+id/linearLayout">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017年3月  by:狐冰杰"
                android:layout_gravity="end|bottom"
                android:gravity="end|bottom"
                android:layout_marginRight="16dp"
        />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
